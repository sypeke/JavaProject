<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <description>La chaine du pilote JDBC utilisé pour se connecter à la BD.</description>
        <param-name>piloteJdbc</param-name>
        <param-value>com.mysql.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <description>L'URL de la BD pour les connexions JDBC.</description>
        <param-name>urlBd</param-name>
        <param-value>jdbc:mysql://localhost/livres?user=root</param-value>
    </context-param>
    <servlet>
        <servlet-name>controleur</servlet-name>
        <servlet-class>com.servletProjet.ControleurFrontal</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.servletProjet.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.servletProjet.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>livreSer</servlet-name>
        <servlet-class>com.servletProjet.ServletLivre</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EvaluationLivre</servlet-name>
        <servlet-class>com.servletProjet.ServrletEvaluationLivre</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FindServlet</servlet-name>
        <servlet-class>com.servletProjet.FindServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletCour</servlet-name>
        <servlet-class>com.servletProjet.ServletCour</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>controleur</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/signout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>livreSer</servlet-name>
        <url-pattern>/pagelivre</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EvaluationLivre</servlet-name>
        <url-pattern>/EvaluationLivre</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FindServlet</servlet-name>
        <url-pattern>/FindServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletCour</servlet-name>
        <url-pattern>/ServletCour</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
